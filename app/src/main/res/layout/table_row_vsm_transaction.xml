<?xml version="1.0" encoding="utf-8"?>


<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/VSMtableRow"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#49515c"
    android:paddingEnd="10dp">


    <TextView
        android:id="@+id/vsmTransSNtextView"
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:gravity="center_vertical|end"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:text="1"
        android:textColor="#78FA5A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/vsmTransVoucherNtxtView"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingEnd="5dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/vsmTransOutletTextView"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingRight="5dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/vsmTransTINtextView"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingEnd="5dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/vsmTransDateNtimeTextV"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingEnd="5dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/vsmTransItemCountTxtV"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingEnd="5dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/vsmTransSubTotalTxtv"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingEnd="5dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/vsmTransVATtextView"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical|end"
        android:paddingEnd="5dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/vsmGrandTotalTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#3f4152"
        android:gravity="center_vertical|end"
        android:paddingEnd="10dp"
        android:text="TextView"
        android:textColor="#78FA5A"
        android:textSize="18sp" />

</TableRow>



