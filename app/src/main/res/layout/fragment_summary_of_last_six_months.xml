<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cardBackgroundDark">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/titleSummaryOfLast6Months"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/cardBackgroundDark1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/SummaryOfLast6MonthsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/advent_pro_thin"
            android:text="Summary of Last Six Months"
            android:textColor="#FFFFFF"
            android:textSize="34sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/pCardSummOfLast6Months"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="@color/cardBackgroundDark1"
        app:layout_constraintBottom_toTopOf="@+id/bCardSummOfLast6Months"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleSummaryOfLast6Months">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pchartsummaryOfLast6Months"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal|center_vertical" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bCardSummOfLast6Months"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/cardBackgroundDark1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/pCardSummOfLast6Months"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pCardSummOfLast6Months">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bChartSummaryOfLast6Months"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/tCardSummOfLast6Months"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/cardBackgroundDark1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pCardSummOfLast6Months"
        app:layout_constraintTop_toBottomOf="@+id/titleSummaryOfLast6Months">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/summaryOfLast6MonthsSN"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/advent_pro_thin"
                android:text="SN"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/summaryOfLastLast6MonthsHeader2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/advent_pro_thin"
                android:text="Month"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/summaryOfLast6MonthsHeader3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:fontFamily="@font/advent_pro_thin"
                android:gravity="end"
                android:text="Amount"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/summaryOfLast6MonthsHeader4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/advent_pro_thin"
                android:gravity="end"
                android:text="DateTime"
                android:textColor="#ffffff"
                android:textSize="20sp" />

        </TableRow>


        <ScrollView
            android:id="@+id/summaryOfLast6MonsScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="45dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TableLayout
                    android:id="@+id/summaryOfLast6MonthsTableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="?android:listDivider"
                    android:showDividers="middle" />
            </LinearLayout>
        </ScrollView>

    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>